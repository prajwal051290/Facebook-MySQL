<!DOCTYPE html>
<html>

  <head>
  
    <title>Facebook</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    
    <style>
	body {
    	background-color: #b0c4de;
	}
	
	</style>
    
  </head>
  
  <body ng-app="homeAngular" ng-controller="homeController">
  
  <h2 align="center">** FB App **</h2>
 
  <br><br>
 
  <form align="center">
  
  <input type="email" placeholder="Email ID" ng-model="emailID"> <br>
  <input type="text" placeholder="First Name" ng-model="fName"> <br>
  <input type="text" placeholder="Last Name" ng-model="lName"> <br>
  <input type="password" placeholder="Password" ng-model="paswd"> <br> <br>
  
  
  <button type="button" ng-click="signUp()">Sign Up</button>
  

  </form>
  
<script>
  
	var app = angular.module('homeAngular', []);
	app.controller('homeController', homeOperations); 
			
	function homeOperations($scope, $http) {
  		
  		$scope.signUp = function(){
  		
  			var signUpInfo = {emailId:$scope.emailID, fName:$scope.fName, lName:$scope.lName, password:$scope.paswd};
  			
  			$http.post("/signUp", signUpInfo)
  			.success(function(data) {
  				console.log("Success returned from Sign Up query");
            })
  		}
  			
  	}
	
</script>
  
  
  </body>
  
</html>